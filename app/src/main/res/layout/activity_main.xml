<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- <include layout="@layout/content_main" /> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/graficos"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center|center_vertical"
            android:text="EDITE UN NUEVO DASHBOARD"
            android:textAlignment="center" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="600dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editor"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:cursorVisible="true"
                    android:fontFamily="@font/jetbrains_mono_light"
                    android:gravity="top"
                    android:inputType="text|textLongMessage|textMultiLine"
                    android:minWidth="300dp"
                    android:minHeight="500dp"
                    android:saveEnabled="true"
                    android:scrollbarSize="7dp"
                    android:scrollbars="horizontal|vertical"
                    tools:text="A 1111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111 \n22222 \n33333\4\n5\n6\n7\n8\n9\n10" />
            </LinearLayout>

        </HorizontalScrollView>

        <Button
            android:id="@+id/b_parse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GENERAR" />

        <Button
            android:id="@+id/b_open"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ABRIR" />
        <Button
            android:id="@+id/b_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GUARDAR" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>